append content
  .breadcrumb-holder
    .container-fluid
      ul.breadcrumb
        li.breadcrumb-item
          a(href='index.html') Home
        li.breadcrumb-item.active Adherents 
  section
    .container-fluid
      // Page Header
      header
        .row
          .col-md-6
            h1.h3.display.m-3 Adherents
          .col-md-6.text-right
            a.btn.btn-primary.btn-lg(href='#', data-toggle='modal', data-target='#ajouter_adherent_modal')
              | Ajouter Adherent
              br
      .row
        .col-lg-12

          .card
            .card-header
              h4 Striped Table
            .card-body
                table#adherentsDatatables.display(style='width:100%')
                  thead
                    tr
                      th ID
                      th Photo
                      th Nom
                      th Prénom
                      th Age (Ans)
                  tbody
                    each a in adherents
                      tr
                        td= a._id
                        td 
                          img.img-fluid.rounded-circle.mCS_img_loaded.adherent_picture(src='/img/avatar-7.jpg', alt='adherent')
                        td= a.nom
                        td= a.prenom
                        td= 18
                  tfoot
                    tr
                      th ID
                      th Photo
                      th Nom
                      th Prénom
                      th Age

  include ./ajouter_adherent_modal
script.
append scripts
  script(src="/js/adherents/adherents.js")